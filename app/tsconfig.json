{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es5",
    "sourceMap": true,
    "newLine": "LF",
    "module": "umd"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "filesGlob": [
    "../typings/index.d.ts",
    "../local_typings/**/*.d.ts",
    "../bower_components/polymer-ts/**/*.d.ts",
    "./**/*.ts",
    "../build/lib/js/*.d.ts",
    "../node_modules/@types/file-saver/**/*.d.ts"
  ],
  "files": [
    "../typings/index.d.ts",
    "../local_typings/chrome_serial.d.ts",
    "../local_typings/threejs-extended.d.ts",
    "../bower_components/polymer-ts/polymer-ts.d.ts",
    "./elements/fab-menu/fab-menu.ts",
    "./elements/fab-radial/fab-radial.ts",
    "./elements/layer-height/layer-height.ts",
    "./elements/microtome-app/microtome-app.ts",
    "./elements/pv-view/pv-view.ts",
    "./elements/shared-animatable/shared-animatable.ts",
    "./elements/slice-preview/slice-preview.ts",
    "../build/lib/js/slicer-lib.d.ts",
    "../node_modules/@types/file-saver/index.d.ts"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "newLineCharacter": "\n",
    "convertTabsToSpaces": true,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterSemicolonInForStatements": true,
    "insertSpaceBeforeAndAfterBinaryOperators": true,
    "insertSpaceAfterKeywordsInControlFlowStatements": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "placeOpenBraceOnNewLineForFunctions": false,
    "placeOpenBraceOnNewLineForControlBlocks": false
  }
}
