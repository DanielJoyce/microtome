{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "sourceMap": true,
    "newLine": "LF",
    "outDir": "../build/app",
    "module": "esnext",
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "microtome": [
        "../build/lib/microtome/index.d.ts"
      ],
      "@three/*": [
        "../node_modules/three/examples/js/*"
      ]
    },
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
