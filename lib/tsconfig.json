{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2015",
    "sourceMap": true,
    "newLine": "LF",
    "module": "es6",
    "declaration": true,
    "outDir": "../build/lib/microtome",
    "types": [
      "three",
      "jszip"
    ],
    "jsx": "preserve"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "**/*.ts"
  ]
}