{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "sourceMap": true,
    "newLine": "LF",
    "module": "esnext",
    "baseUrl": ".",
    "outDir": "../../build/app",
    "paths": {
      "microtome": [
        "../lib/index.ts"
      ]
    },
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "./**/*.ts"
  ]
}