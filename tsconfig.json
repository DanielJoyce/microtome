{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es5",
    "outDir": ".",
    "sourceMap": true,
    "newLine": "LF",
    "module": "umd"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "filesGlob": [
    "typings/browser.d.ts",
    "local_typings/**/*.d.ts",
    "bower_components/polymer-ts/**/*.d.ts",
    "app/**/*.ts"
  ],
  "files": [
    "typings/browser.d.ts",
    "local_typings/chrome_serial.d.ts",
    "local_typings/threejs-extended.d.ts",
    "bower_components/polymer-ts/polymer-ts.d.ts",
    "app/elements/fab-menu/fab-menu.ts",
    "app/elements/fab-radial/fab-radial.ts",
    "app/elements/layer-height/layer-height.ts",
    "app/elements/microtome-app/microtome-app.ts",
    "app/elements/pv-view/pv-view.ts",
    "app/elements/shared-animatable/shared-animatable.ts",
    "app/elements/slice-preview/slice-preview.ts",
    "app/scripts/actions.ts",
    "app/scripts/advanced_slicer.ts",
    "app/scripts/app.ts",
    "app/scripts/background.ts",
    "app/scripts/core_threed.ts",
    "app/scripts/printer_config.ts",
    "app/scripts/projector.ts",
    "app/scripts/serial-support.ts",
    "app/scripts/slicer_camera_nav.ts",
    "app/scripts/slicer.ts",
    "app/scripts/units.ts"
  ],
  "exclude": [
    "typings/main/**",
    "node_modules/**"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
